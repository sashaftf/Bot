<script>
// ====== –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è –ø—Ä–∏ —Å–∫—Ä–æ–ª–ª–µ ======
const elements = document.querySelectorAll('.fade-in');
function showElements() {
    const trigger = window.innerHeight * 0.85;
    elements.forEach(el => {
        const top = el.getBoundingClientRect().top;
        if (top < trigger) el.classList.add('show');
    });
}
window.addEventListener('scroll', showElements);
window.addEventListener('load', showElements);

// ====== –°–∫—Ä–æ–ª–ª –∫ –±–ª–æ–∫—É ======
function scrollToBlock(id){
    document.getElementById(id).scrollIntoView({behavior:'smooth'});
}

// ====== –ú–∞—Å–∫–∞ —Ç–µ–ª–µ—Ñ–æ–Ω–∞ +7 (999) 999-99-99 ======
const phoneInput = document.getElementById("phone");

phoneInput.addEventListener("input", function(e) {
    let value = this.value.replace(/\D/g, ""); // –æ—Å—Ç–∞–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ —Ü–∏—Ñ—Ä—ã
    if(value.startsWith("7") || value.startsWith("8")) value = value.substring(1);
    value = value.substring(0,10); // –º–∞–∫—Å–∏–º—É–º 10 —Ü–∏—Ñ—Ä

    let formatted = "+7 ";
    if(value.length > 0) formatted += "(" + value.substring(0,3);
    if(value.length >= 3) formatted += ") " + value.substring(3,6);
    if(value.length >= 6) formatted += "-" + value.substring(6,8);
    if(value.length >= 8) formatted += "-" + value.substring(8,10);

    this.value = formatted;
});

// –†–∞–∑—Ä–µ—à–∞–µ–º —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –Ω–æ–º–µ—Ä–∞, –∫—É—Ä—Å–æ—Ä —Å–æ—Ö—Ä–∞–Ω—è–µ—Ç—Å—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏

// ====== Telegram Bot ======
const BOT_TOKEN = "8592771262:AAEXEF4Kpi57QjKLkpWbzTsAAAnVr6zSn5U";
const CHAT_ID = "7305684079";
const API_URL = `https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`;

document.getElementById("contactForm").addEventListener("submit", async function(e){
    e.preventDefault();
    const name = document.getElementById("name").value.trim();
    const phone = document.getElementById("phone").value.trim();
    const service = document.getElementById("service").value;

    const message = `
<b>üì© –ù–æ–≤–∞—è –∑–∞—è–≤–∫–∞ —Å —Å–∞–π—Ç–∞ CleanHome</b>
<b>–ò–º—è:</b> ${name}
<b>–¢–µ–ª–µ—Ñ–æ–Ω:</b> ${phone}
<b>–£—Å–ª—É–≥–∞:</b> ${service}
    `;

    try {
        await fetch(API_URL, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                chat_id: CHAT_ID,
                parse_mode: "HTML",
                text: message
            })
        });
        document.getElementById("status").innerHTML = "–ó–∞—è–≤–∫–∞ —É—Å–ø–µ—à–Ω–æ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞!";
        document.getElementById("status").style.color = "green";
        document.getElementById("contactForm").reset();
    } catch(error) {
        document.getElementById("status").innerHTML = "–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏!";
        document.getElementById("status").style.color = "red";
    }
});
